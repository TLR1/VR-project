button {
    background-color: rgba(60, 60, 60, 0.9); /* Button background color */
    border-radius: 4px;                      /* Rounded corners */
    padding: 6px 12px;                       /* Inner spacing */
    color: white;                            /* Text color */
    font-size: 14px;                         /* Font size */
    border: none;                            /* Remove default border */
    cursor: pointer;                         /* Change cursor to pointer */
}

button:hover {
    background-color: rgba(80, 80, 80, 0.9); /* Highlight on hover */
}

button:active {
    background-color: rgba(100, 100, 100, 0.9); /* Darker color on click */
}