.lib-icon {
    width: 64px;                             /* Fixed width */
    height: 64px;                            /* Fixed height */
    background-size: cover;                  /* Scale the image to cover the element */
    background-position: center;             /* Center the image */
    margin-right: 8px;                       /* Space between icon and text */
}
